[format]
  pretty = %Cblue%h%Creset %Cgreen[%ar]%Creset (%an) %s
[alias]
  ci = commit -v
  up = !git fetch origin && git rebase origin/master
  mm = !git checkout master && git merge @{-1} --ff-only
	lcrev = log --reverse --no-merges --stat @{1}..\n
